@model AppUser

<section style="background-color: #333333;">
    <div >

        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center" style="background-color: #333333;">
                        <img src="@Model.ProfileImg" alt="User Image"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Model.UserName</h5>
                        <p class="text-muted mb-1"></p>
                        <p class="text-muted mb-4">@Model.City,@Model.Country</p>
                        <div class="d-flex justify-content-center mb-2">
                            @if (User.Identity.IsAuthenticated) {
                                <a asp-controller="User" asp-action="Edit">
                                    <button type="button" class="btn btn-primary">
                                        Edit Profile</button></a>
                            }

                           
                            

                            
                        </div>
                    </div>
                </div>
                <div class="card mb-4 mb-lg-0" style="background-color: #333333;">
                    <div class="card-body p-0" style="background-color: #333333;">
                        <ul class="list-group list-group-flush rounded-3">
                                <div class="btn btn-primary">
                                <a class="btn btn-close-white" asp-action="PasswordChange">Change Password</a>
                                </div>
                           
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-github fa-lg" style="color: #333333;"></i>
                                <p class="mb-0">Use to Add More Features</p>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                                <p class="mb-0">Use to Add More Features</p>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                                <p class="mb-0">Use to Add More Features</p>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                                <p class="mb-0">Use to Add More Features</p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8" >
                <div class="card mb-4" style="background-color: #333333;">
                    <div class="card-body" style="background-color: #333333;">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.UserName</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Email</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.PhoneNumber</p>
                            </div>
                        </div>
                        <hr>
                       
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Street @Model.City @Model.Country</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>